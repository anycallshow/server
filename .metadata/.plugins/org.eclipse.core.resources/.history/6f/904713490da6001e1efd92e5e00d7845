package edu.kh.servlet;

import java.io.IOException;
import java.io.PrintWriter;

import javax.servlet.ServletException;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

public class ServletEx3 extends HttpServlet{
	
	@Override
	protected void doGet(HttpServletRequest req, HttpServletResponse resp) throws ServletException, IOException {
		
		String userId = req.getParameter("userId");
		String userPw1 = req.getParameter("userPw1");
		String userPw2 = req.getParameter("userPw2");
		String userName = req.getParameter("userName");
		String userEmail = req.getParameter("userEmail");
		String[] color = req.getParameterValues("color");
		
		resp.setContentType("text/html; charset=UTF-8");
		PrintWriter out = resp.getWriter();
		
		
		if(color != null) {
			
			out.print("<!DOCTYPE html>");
			
			out.print("<html>");
			
			out.print("<head>");
			out.print("<title>" + userName + "님의 회원 정보</title>");
			out.print("</head>");
			
			out.print("<body>");
			
			out.print("<ul>");
			
			out.print("<li>아이디 : " + userId);
			out.print("</li>");
			out.print("<li>이름 : " + userName);
			out.print("</li>");
			out.print("<li>이메일 : " + userEmail);
			out.print("</li>");
			for (String c : color) {
				out.print("<li>좋아하는색 : " + c + "</li>");
			}
			
			out.print("</ul>");
			out.print("</body>");
			out.print("</html>");
			
		}
		
		
	}

}
